---
import "@fontsource/ubuntu-mono";
import Sidebar from "../components/Sidebar.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="jans schulsachen" />
    <meta name="viewport" content="width=device-width" />
    <script
      defer
      src="https://umami.xn--1-umb.com/script.js"
      data-website-id="a471bd38-495f-488b-b9f0-3c844e2f40a3"></script>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link
      rel="alternate"
      type="application/rss+xml"
      title="learn"
      href={new URL("rss.xml", Astro.site)}
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Sidebar>
      <slot />
    </Sidebar>
  </body>
</html>
<style is:global>
  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
  }
  body {
    font-family: "Excalifont", sans-serif;
    background-color: #24292e;
    color: #fafbfc;
  }
  a {
    text-decoration: none;
    color: white;
  }
  a:hover {
    text-decoration: underline;
  }
  h1 {
    text-decoration: wavy underline;
    text-underline-offset: 0.2rem;
    text-decoration-color: #2dba4e;
    line-height: 2.6rem;
  }
  li {
    margin-bottom: 0.4rem;
  }
  table {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: 1rem;
    font-size: 0.85rem;
  }

  /* Add border to the table and table cells */
  table,
  th,
  td {
    border: 1px solid #ddd;
  }

  /* Add padding and text alignment */
  th,
  td {
    padding: 8px; /* Smaller padding for compactness */
    text-align: left;
  }

  /* Header background color using var(--accent) and white text */
  th {
    background-color: var(--accent);
    color: white;
    font-weight: bold;
  }

  /* Make the table responsive */
  @media screen and (max-width: 600px) {
    table {
      display: block;
      overflow-x: auto;
      white-space: nowrap;
    }
  }

  @font-face {
    font-family: "Excalifont";
    src: url("/fonts/Excalifont-Regular.woff2") format("woff2");
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }
</style>
